<web-app>
    <context-param>
        <param-name>ManagerID</param-name>
        <param-value>ECBookM</param-value>
    </context-param>
    <context-param>
        <param-name>ManagerPass</param-name>
        <param-value>manager</param-value>
    </context-param>
    <!-- login -->
	<servlet>
		<servlet-name>login</servlet-name>
		<jsp-file>/login.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>loginresult</servlet-name>
		<jsp-file>/loginresult.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>loginresult</servlet-name>
		<url-pattern>/loginresult</url-pattern>
	</servlet-mapping>
        <!-- manager -->
    <servlet>
        <servlet-name>manager</servlet-name>
        <jsp-file>/manager.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>manager</servlet-name>
        <url-pattern>/manager</url-pattern>
    </servlet-mapping>

	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/loginservlet</url-pattern>
	</servlet-mapping>

    <!-- regist -->
    <servlet>
        <servlet-name>regist</servlet-name>
        <jsp-file>/register.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>regist</servlet-name>
        <url-pattern>/regist</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>registresult</servlet-name>
        <jsp-file>/registerresult.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>registresult</servlet-name>
        <url-pattern>/registresult</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>registservlet</servlet-name>
        <servlet-class>RegistServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registservlet</servlet-name>
        <url-pattern>/registservlet</url-pattern>
    </servlet-mapping>
    


    <!-- login filter -->
    <filter>
        <filter-name>logincheckfilter</filter-name>
        <filter-class>filter.LoginCheckFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>logincheckfilter</filter-name>
        <url-pattern>/login</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>

    <filter>
        <filter-name>logincheckmanager</filter-name>
        <filter-class>filter.LoginCheckManager</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>logincheckfilter</filter-name>
        <url-pattern>/login</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>

    <filter>
        <filter-name>authenticatefilter</filter-name>
        <filter-class>filter.AuthenticateFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authenticatefilter</filter-name>
        <url-pattern>/loginresult</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>    

     <filter>
        <filter-name>authenticatefilter</filter-name>
        <filter-class>filter.AuthenticateManager</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authenticatefilter</filter-name>
        <url-pattern>/manager</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
</web-app>