<web-app>

	<welcome-file-list>
		<welcome-file>indexcall.do</welcome-file>
	</welcome-file-list>

    <servlet>
		<servlet-name>FrontController</servlet-name>
		<servlet-class>FrontController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FrontController</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>

    <!-- Book Image Servlet -->
    <servlet>
        <servlet-name>BookImage</servlet-name>
        <servlet-class>BookImageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookImage</servlet-name>
        <url-pattern>/bookimage/*</url-pattern>
    </servlet-mapping>


     <!--(manager login) checkfilter -->
    <filter>
        <filter-name>logincheckmanager</filter-name>
        <filter-class>filter.LoginCheckManager</filter-class>
        <init-param>
	        <param-name>ManagerID</param-name>
	        <param-value>ECBookM</param-value>
	    </init-param>
	    <init-param>
	        <param-name>ManagerPass</param-name>
	        <param-value>manager</param-value>
	    </init-param>
    </filter>

    <filter-mapping>
        <filter-name>logincheckmanager</filter-name>
        <url-pattern>/managercall.do</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>

     <!--(manager login) authenticate filter-->
     <filter>
        <filter-name>authenticatemanager</filter-name>
        <filter-class>filter.AuthenticateManager</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>authenticatemanager</filter-name>
        <url-pattern>/managercall.do</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>

    <filter-mapping>
        <filter-name>authenticatemanager</filter-name>
        <url-pattern>/userlist</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>


    <!-- Review Book Filter -->
    <filter>
        <filter-name>bookreviewfilter</filter-name>
        <filter-class>filter.BookReviewFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>bookreviewfilter</filter-name>
        <url-pattern>/bookinfo.do</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>

    <!-- Main Page Filter -->
    <filter>
        <filter-name>mainpagefilter</filter-name>
        <filter-class>filter.MainPageFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>mainpagefilter</filter-name>
        <url-pattern>/indexcall.do</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>

</web-app>